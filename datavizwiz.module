function _datavizwiz_get_summary_panes($nid) {
  $query = sprintf("
      SELECT type, name, options 
      FROM {dvw_summary_views} 
      WHERE nid=%s 
      ORDER BY pane_order", $nid);
  $sql = db_query($query);
  $rows = _datavizwiz_get_rowarray($sql);
  return $rows;
}

